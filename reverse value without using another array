#include <stdio.h>
void reverse (int arr[]){
    int i=0;
    int j=6;
    while(i<j){
        int temp=arr[i];
        arr[i]=arr[j];
        arr[j]=temp;
        i++;
        j--;
    }
}
int main (){
    int arr[7]={1,2,3,4,5,6,7};
     reverse (arr);
     for(int i=0;i<=6;i++){
         printf("%d",arr[i]);
     }
      return 0;   
}

(1)
if an array arr contain n element then check if the given array is a palindrome or not

include <stdio.h>

int main()
{
    int arr[6],i,j;
    printf("enter 6 array");
    for(int i=0;i<=5;i++){
        scanf("%d",&arr[i]);
    }
    for(i=0,i=5;i<j;i++,j--){
        if(arr[i]!=arr[j]){
            printf("\n array are not palindrome ");
        }
    }
     if (i>j){
         printf("\n array are palindrome ");
     }
    return 0;
}