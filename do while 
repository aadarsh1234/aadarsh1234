#include <stdio.h>

int main()
{
    int n;
    printf("enter the num");
    scanf("%d",&n);
   int  sum=0;
   int lastdigit=0;
   while(n!=0){
   lastdigit=n%10;
   sum=sum+lastdigit;
   n=n/10;
   }
   printf("the sum is %d",sum);

    return 0;
}

#include <stdio.h>

int main()
{
    int a,b;
    printf("enter base");
     scanf("%d",&a);
     printf("enter power");
     scanf("%d",&b);
     int power=1;
     for(int i=1;i<=b;i++)
     power=power*a;
     {
         printf("%d is raised to the power %d is%d\n",a,b,power);
     }
    return 0;
}


#include <stdio.h>

int main()
{
    int n;
   printf("enter the number");
   scanf("%d",&n);
   int count =0;
   while(n!=0){
   n=n/10;
   count++;}
   printf("the number of difit is %d",count);
   
   return 0;
}
   